        "version": "2.0.0",
        "tasks": [
                {
                        "label": "Assemble and test",
                        "type": "shell",
                        "command": "make -C \"${fileDirname}\" ${fileBasenameNoExtension}",
                        "problemMatcher": [],
                        "group": {
                                "kind": "test",
                                "isDefault": true
                        }
                },
                {
                        "label": "Assemble",
                        "type": "shell",
                        "command": "make -C \"${fileDirname}\" ${fileBasenameNoExtension}.o",
                        "problemMatcher": [],
                        "group": {
                                "kind": "build",
                                "isDefault": true
                        }
                }
        ]
}