{
        // See https://go.microsoft.com/fwlink/?LinkId=733558
        // for the documentation about the tasks.json format
        "version": "2.0.0",
        "tasks": [
                {
                        "label": "Assemble and test",
                        "type": "shell",
                        "command": "make -C \"${fileDirname}\" ${fileBasenameNoExtension}",
                        "problemMatcher": {
                                "owner": "acme",
                                "fileLocation": [
                                    "absolute"
                                ],
                                "pattern": {
                                    "regexp": "^(Error - File\\s+(.*), line (\\d+) (\\((Zone|Macro) .*\\))?:\\s+(.*))$",
                                    "file": 2,
                                    "location": 3,
                                    "message": 1
                                }
                            },
                        "group": {
                                "kind": "test",
                                "isDefault": true
                        }
                },
                {
                        "label": "Assemble",
                        "type": "shell",
                        "command": "make -C \"${fileDirname}\" ${fileBasenameNoExtension}.o",
                        "problemMatcher": {
                                "owner": "acme",
                                "fileLocation": [
                                    "absolute"
                                ],
                                "pattern": {
                                    "regexp": "([Ee]rror - File\\s+(.*), line (\\d+) (\\((Zone|Macro) .*\\))?:\\s+(.*))$",
                                    "file": 2,
                                    "location": 3,
                                    "message": 1
                                }
                            },
                        "group": {
                                "kind": "build",
                                "isDefault": true
                        }
                }
        ]
}